<?xml version="1.0" encoding="UTF-8"?>
<script xmlns="http://www.xstep.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <variables>
        <variable type="execution-file" name="execute"
            >file:///C:/Users/bruening.FDH-FFM/txstep/ueb/txstep.tu</variable>
        <variable type="permanent-file" name="kkap-em-plr" code="utf8"
            >file:///C:/Users/bruening.FDH-FFM//github/gerritbruening/texthist-data/kafka/kka/kkap-emend-page-line-refs.xml</variable>
        <variable type="permanent-file" name="kkap-emend" code="utf8" option="erase"
            >file:///C:/Users/bruening.FDH-FFM//github/gerritbruening/texthist-data/kafka/kka/kkap-emend.xml</variable>
    </variables>

    <transform source="kkap-em-plr" destination="kkap-emend">
        <pass>
            <modify>
                <exchange>
                    <exchange-table>
                        <string-pair>
                            <search-string>{{apparatus}}</search-string>
                            <replacement-string>{{f:apparatus xmlns:f="http://www.faustedition.net/ns" xmlns="http://www.tei-c.org/ns/1.0"}}</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>{{/apparatus}}</search-string>
                            <replacement-string>{{/f:apparatus}}</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>{{refPage*</search-string>
                            <replacement-string/>
                        </string-pair>
                        <string-pair>
                            <search-string>{{refLine n="{|}{#}-{#}{|}"}} {|}*{|}\] {|}*{|}{{/refLine}}</search-string>
                            <replacement-string>{{app}}{{f:replace n="{=2=}"}}{=4=}{{/f:replace}}{{f:ins n="{=2=}"}}{=6=}{{/f:ins}}{{/app}}</replacement-string>
                        </string-pair>
                    </exchange-table>
                </exchange>
            </modify>
        </pass>
    </transform>

</script>
